	<body>
	<input type="hidden" value="${(procedureId)?if_exists}" id="hidprocedureId" />
	<table id="actiondatalist" border="0" cellpadding="0" cellspacing="0" class="table table-hover table-striped">
                            <tbody>
	                           <tr>
	                           	   <th class="table-head">[@lang_res k='console.workflow.serialNumber'/]</th>
	                               <th class="table-head">[@lang_res k='console.workflow.actionNumber'/]</th>
	                               <th class="table-head">[@lang_res k='console.workflow.actionCoding'/]</th>
	                               <th class="table-head">[@lang_res k='console.workflow.approvalRole'/]</th>
	                               <th class="table-head">[@lang_res k='console.workflow.sendAll'/]</th>
	                               <th class="table-head">[@lang_res k='console.workflow.singleOrMutiple'/]</th>
	                               <th class="table-head">[@lang_res k='console.workflow.startMiddleEnd'/]</th>
	                            </tr>                                
                            </tbody>
                        </table>
                   

			            

<script src="${base}/res/console/js/jquery-1.11.2.min.js" type="text/javascript"></script>
<script src="${base}/res/console/js/jquery.pagination.js"></script>
<script src="${base}/res/console/js/bootstrap.js" type="text/javascript"></script>
